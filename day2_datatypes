#include <stdio.h>

int main() {

    int roll;
    float percentage;
    char grade;

    printf("Enter Roll Number: ");
    scanf("%d", &roll);

    printf("Enter Percentage: ");
    scanf("%f", &percentage);

    printf("Enter Grade: ");
    scanf(" %c", &grade);

    printf("\n--- Student Details ---\n");
    printf("Roll Number = %d\n", roll);
    printf("Percentage = %f\n", percentage);
    printf("Grade = %c\n", grade);

    return 0;
}

